#!/bin/bash

# Step 0: Ensure .env exists
if [ ! -f .env ]; then
  echo "âŒ .env file not found!"
  echo "Please create a .env file with your DeepL key:"
  echo "DEEPL_FREE_SECRET=your-api-key"
  exit 1
fi

# Step 1: Set up virtualenv if missing
if [ ! -d .venv ]; then
  echo "ğŸ Creating virtual environment..."
  python3 -m venv .venv
fi

# Step 2: Activate and install dependencies
.venv/bin/python -m pip install --quiet -r requirements.txt

clear
echo "ğŸ‘‹ Hi! I have a few scripts ready for you. Choose a script and I will set it up for you!"
echo

# Step 3: Start translation
echo "ğŸš€ Launching script: translate.py"
echo
.venv/bin/python "translate.py"

echo
