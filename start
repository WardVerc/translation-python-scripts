#!/bin/bash

SCRIPTS=(
  "translate.py"
  "json-to-excel.py"
  "excel-to-json.py"
  "flatten-json.py"
)

SCRIPT_LABELS=(
  "Translate JSON files using DeepL (translate.py)"
  "Compare and export translations (json-to-excel.py)"
  "Import edited Excel and update translations (excel-to-json.py)"
  "Flatten nested JSON (flatten-json.py)"
)

# Step 0: Ensure .env exists
if [ ! -f .env ]; then
  echo "âŒ .env file not found!"
  echo "Please create a .env file with your DeepL key:"
  echo "DEEPL_FREE_SECRET=your-api-key"
  exit 1
fi

# Step 1: Set up virtualenv if missing
if [ ! -d .venv ]; then
  echo "ğŸ Creating virtual environment..."
  python3 -m venv .venv
fi

# Step 2: Activate and install dependencies
source .venv/bin/activate
pip3 install --quiet -r requirements.txt

clear
echo "ğŸ‘‹ Hi! I have a few scripts ready for you. Choose a script and I will set it up for you!"
echo

while true; do
  for i in "${!SCRIPT_LABELS[@]}"; do
    echo "$((i+1)). ${SCRIPT_LABELS[$i]}"
  done

  echo -n $'\n'"ğŸ‘‰ Enter the number of the script you want to run: "
  read choice

  script_index=$((choice - 1))
  selected_script="${SCRIPTS[$script_index]}"

  if [ -z "$selected_script" ] || [ ! -f "$selected_script" ]; then
    echo "âŒ Invalid choice. Please try again."
    continue
  fi

  echo
  echo "ğŸ¯ Aha! Running: ${SCRIPT_LABELS[$script_index]}"
  echo

  # Custom prompt for json-to-excel
  if [[ "$selected_script" == "json-to-excel.py" ]]; then
    echo -n "ğŸ“„ Is the existing Excel file still 'translations.xlsx' in your folder? (y/n): "
    read confirm
    if [[ "$confirm" != "y" ]]; then
      echo "ğŸ›‘ Please update the script paths before running. Exiting."
      break
    fi
  fi

  # Run selected script
  echo "ğŸš€ Launching script: $selected_script"
  echo
  .venv/bin/python "$selected_script"

  echo
  echo -n "ğŸ” Do you want to run another script? (y/n): "
  read again

  if [[ "$again" != "y" ]]; then
    echo "ğŸ‘‹ Okay bye bye!"
    break
  fi

  echo
done
